<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/md_grey_900</item>
        <item name="colorPrimaryVariant">#202020</item>
        <item name="colorSecondary">@color/md_blue_700</item>
        <item name="colorSurface">@color/md_grey_900</item>
        <item name="colorOnSurface">#DEFFFFFF</item>
        <item name="colorOnPrimarySurface">#DEFFFFFF</item>
        <item name="colorOnPrimary">#DEFFFFFF</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:statusBarColor">@color/md_black_1000</item>
        <item name="android:textColorTertiary">#A8FFFFFF</item>
        <item name="borderlessButtonStyle">@style/Widget.App.Button.TextButton</item>
        <item name="materialAlertDialogTheme">@style/AppTheme.AlertDialogTheme</item>
        <item name="alertDialogTheme">@style/AppTheme.AlertDialogTheme</item>
        <item name="linearProgressIndicatorStyle">@style/AppTheme.ProgressBar</item>
        <item name="circularProgressIndicatorStyle">@style/AppTheme.ProgressBar</item>
    </style>

    <style name="AppTheme3" parent="Theme.Material3.Dark">
        <item name="colorPrimary">@color/md_grey_600</item>
        <item name="colorOnPrimary">@color/md_white_1000</item>
        <item name="colorTertiary">@color/md_white_1000</item>
        <item name="colorSurface">@color/background</item>
        <item name="android:textColorTertiary">@color/md_grey_300</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme3.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="Widget.App.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.TextButton</item>
    </style>

    <style name="ThemeOverlay.App.Button.TextButton" parent="">
        <item name="colorPrimary">@android:color/white</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="CheckBoxDark" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/button_tint_dark</item>
    </style>

    <style name="RadioDark" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@color/button_tint_dark</item>
    </style>

    <style name="SwitchDark" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb_tint_dark</item>
        <item name="trackTint">@color/switch_track_tint_dark</item>
    </style>

    <style name="AppTheme.ProgressBar" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorColor">@android:color/white</item>
    </style>

    <style name="AppTheme.PrimaryFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="colorOnSecondary">@color/md_white_1000</item>
    </style>

    <style name="AppTheme.AlternateFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="colorOnSecondary">@color/md_white_1000</item>
        <item name="colorSecondary">?attr/colorPrimary</item>
        <item name="colorButtonNormal">@android:color/white</item>
    </style>

    <style name="AppTheme.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="itemBackground">?attr/colorPrimary</item>
        <item name="itemIconTint">@color/bottom_navigation_view</item>
        <item name="itemTextColor">@color/bottom_navigation_view</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="passwordToggleTint">@android:color/white</item>
    </style>

    <style name="ListSubheader">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:alpha">.87</item>
    </style>

    <style name="ListSubheaderPrimary">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:alpha">.87</item>
    </style>

    <style name="ListTextPrimary">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="ListTextSecondaryDark">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:alpha">.87</item>
    </style>

    <style name="ListTextSecondary">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:alpha">.54</item>
    </style>

</resources>