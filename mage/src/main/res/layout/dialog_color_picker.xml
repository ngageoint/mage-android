<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/hexInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:errorTextAppearance="@style/AppTheme.ErrorTextAppearance"
        style="@style/AppTheme.TextInputLayout"
        android:theme="@style/AppTheme.TextInputLayout"
        android:hint="@string/hex_color">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/hexText"
            android:drawableStart="@drawable/color_preference_preview"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"/>

    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:id="@+id/blue_tile"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/md_blue_500"
        android:background="@drawable/color_tile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hexInputLayout"/>

    <View
        android:id="@+id/green_tile"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="16dp"
        android:background="@drawable/color_tile"
        android:backgroundTint="@color/md_green_500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hexInputLayout"/>

    <View
        android:id="@+id/indigo_tile"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="16dp"
        android:background="@drawable/color_tile"
        android:backgroundTint="@color/md_indigo_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hexInputLayout"/>

    <View
        android:id="@+id/orange_tile"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/md_orange_500"
        android:background="@drawable/color_tile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blue_tile"/>

    <View
        android:id="@+id/pink_tile"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="16dp"
        android:background="@drawable/color_tile"
        android:backgroundTint="@color/md_pink_500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blue_tile"/>

    <View
        android:id="@+id/purple_tile"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="16dp"
        android:background="@drawable/color_tile"
        android:backgroundTint="@color/md_purple_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blue_tile"/>

    <View
        android:id="@+id/red_tile"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="16dp"
        android:background="@drawable/color_tile"
        android:backgroundTint="@color/md_red_500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/orange_tile"/>

    <View
        android:id="@+id/light_blue_tile"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="16dp"
        android:background="@drawable/color_tile"
        android:backgroundTint="@color/md_light_blue_500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/orange_tile"/>

    <View
        android:id="@+id/yellow_tile"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="16dp"
        android:background="@drawable/color_tile"
        android:backgroundTint="@color/md_yellow_600"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/orange_tile"/>

    <View
        android:id="@+id/light_gray_tile"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="16dp"
        android:background="@drawable/color_tile"
        android:backgroundTint="@color/md_grey_300"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/red_tile"/>

    <View
        android:id="@+id/dark_gray_tile"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="16dp"
        android:background="@drawable/color_tile"
        android:backgroundTint="@color/md_grey_700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/red_tile"/>

    <View
        android:id="@+id/black_tile"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="16dp"
        android:background="@drawable/color_tile"
        android:backgroundTint="@color/md_black_1000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/red_tile"/>

</androidx.constraintlayout.widget.ConstraintLayout>